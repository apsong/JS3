#! /bin/sh

PROGRAM=`basename $0`
 
usage()
{
    echo "Usage: $PROGRAM [192.168.99.98:40000/perf] [-u test] [-p test] [-i|--interval 60]"
    echo "       $PROGRAM -h|--help"
}

[ -f ~/.mg ] && . ~/.mg

while [ $# -gt 0 ]; do
    case $1 in
        -u)
            shift; U=$1;;
        -p)
            shift; P=$1;;
        -i)
            shift; INTERVAL=$1;;
        *:*/*)
            DB=$1;;
        -h|--help)
            usage; exit 0;;
        *)
            usage; exit 1;;
    esac
    shift
done
#DB=192.168.99.141:37017/test
[ "$DB" = "" ] && DB=192.168.99.98:40000/perf
[ "$U"  = "" ] && U=test
[ "$P"  = "" ] && P=test
[ "$INTERVAL" = "" ] && INTERVAL=60

now_seconds()
{
    date "+%s"
}
time_str()
{
    date -d "@$1" "+%T"
}
mg_countBetween()
{
    _begin=$1
    _end=$2
    mongo $DB -u $U -p $P --quiet --eval \
        "db.fs.files.find({time: {\$gte: $_begin, \$lt: $_end}}).count()"
}
mg_clean()
{
    mongo $DB -u $U -p $P --quiet --eval \
        'db.fs.files.drop(); db.fs.chunks.drop()' | egrep -v "^(true|false)$"
}
mg_aggr()
{
    mongo $DB -u $U -p $P --quiet --eval \
        'db.fs.files.aggregate([{$group: {_id: "$time", count: {$sum: 1}}}, {$sort: {_id: 1}}]).forEach(printjson)'
}
mg_total()
{
    while [ 1 ]; do
        TOTAL=`mongo $DB -u $U -p $P --quiet --eval 'db.fs.files.count()'`
        NOW=`date "+%Y-%m-%d %H:%M:%S"`
        [ -z "$LAST" ] && diff=0 || diff=`expr $TOTAL - $LAST`
        case "$diff" in
            -*) echo "[$NOW] $diff => $TOTAL";;
            *) echo "[$NOW] +$diff => $TOTAL";;
        esac

        [ -n "$LAST" -a $diff -eq 0 ] && break
        LAST=$TOTAL
        sleep 10
    done
}
mg_findColumn()
{
    [ -z "$1" ] && KEY=metadata.parameter.merchantid || KEY="$1"
    FILTER=`echo $KEY | sed -e 's/^.*\.//'`
    mongo $DB -u $U -p $P --quiet --eval \
        "db.fs.files.find({},{_id:0,'$KEY':1}).forEach(printjson)" | awk -F\" "/$FILTER/{print \$4}"
}


mg_monitor()
{
    LAST=0; NOW=`now_seconds`

    NUM_0=0
    TOTAL=0
    while [ 1 ]; do
        COUNT=`mg_countBetween $LAST $NOW`
        [ $LAST -ne 0 ] && TOTAL=`expr $TOTAL + $COUNT`
        printf "[`time_str $NOW`] + %4d  = $TOTAL\n" $COUNT
        [ "$COUNT" -eq "0" ] && NUM_0=`expr $NUM_0 + 1`
        [ "$NUM_0" -ge "60" ] && break
        sleep $INTERVAL

        LAST=$NOW; NOW=`expr $NOW + $INTERVAL`
    done
    #done | tee `NEWFILE $PROGRAM.log`
}

mg_count()
{
    mg_aggr | sed -e 's/,//' | awk -v interval=$INTERVAL '
        BEGIN {
            end=0; count_interval=0; total=0;
        }
        {
            if (NF != 8) {
                print
                exit
            }

            SECONDS=$4
            COUNT=$7

            total += COUNT

            if (end == 0) {
                begin = SECONDS
                end   = begin + 60
                count_interval += COUNT
                printf("[%s] %6d\n", strftime("%T", begin), 0)
            } else if (SECONDS < end) {
                count_interval += COUNT
            } else {
                printf("[%s] %6d\n", strftime("%T", end), count_interval)

                while (SECONDS >= end) {
                    begin = end
                    end  += interval
                    count_interval = 0
                    if (SECONDS >= end) {
                        printf("[%s] %6d\n", strftime("%T", end), 0)
                    }
                }
                count_interval += COUNT
            }
        }
        END {
            printf("[%s] %6d\n", strftime("%T", SECONDS), count_interval)
            print "================="
            printf("TOTAL: %10d\n", total)
        }
    '
}

case $PROGRAM in
    mg.aggr)
        mg_aggr
        ;;
    mg.total)
        mg_total
        ;;
    mg.count)
        mg_count
        ;;
    mg.clean)
        mg_clean
        ;;
    mg.monitor)
        mg_monitor
        ;;
    mg.findColumn)
        mg_findColumn
        ;;
esac

